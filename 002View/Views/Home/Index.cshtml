@model IEnumerable<_002View.Models.NightMarket> 
    @*抓模型的*@
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            編號
        </th>
        <th>
            夜市名稱
        </th>
        <th>
            夜市地址
        </th>
        <th>
            圖片
        </th>
        <th>
            看地圖
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Id
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            <img src="~/images/@(item.Id).jpg" width="150"/>
        </td>
        <td>
            <a href="https://www.google.com.tw/maps/place/@(item.Address)" target="_blank" class="btn btn-warning">點我看地圖</a>
            @*@Html.ActionLink("編輯", "Edit", new { id=item.Id }) |*@
            @Html.ActionLink("詳細資料", "Details", new { id=item.Id }) |
            @*@Html.ActionLink("刪除", "Delete", new { id=item.Id })*@
        </td>
    </tr>
}

</table>
